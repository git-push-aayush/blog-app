<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('../partials/_header_helper') %>
    <title>Blogger</title>
  </head>
  <body>
    <%- include('../partials/_nav_bar') %>
    <div class="container">
      <% blogs.forEach(blog => { %>
      <div class="card mt-4 shadow p-3 mb-5 bg-white rounded">
        <div class="card-body">
          <h4 class="card-title"><%= blog.title %></h4>
          <div class="card-subtitle text-muted mb-2">
            <%= blog.createdAt.toLocaleDateString() %>
          </div>
          <div class="card-text mb-2"><%= blog.description %></div>
          <a href="/blogs/<%= blog.slug %>" class="btn btn-primary"
            >Read More</a
          >
          <form
            action="/blogs/<%=blog.id%>?_method=DELETE"
            method="POST"
            class="d-inline"
          >
            <button class="btn btn-danger" type="submit">Delete</button>
          </form>
        </div>
      </div>
      <% }); %>
    </div>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-p34f1UUtsS3wqzfto5wAAmdvj+osOnFyQFpp4Ua3gs/ZVWx6oOypYoCJhGGScy+8"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
